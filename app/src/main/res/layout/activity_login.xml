<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login"
    tools:context=".login.LoginActivity">

    <ImageView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-30dp"
        android:layout_marginTop="140dp"
        android:layout_toLeftOf="@id/login_phone"
        android:src="@mipmap/login_icon_phone_n_hdpi" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-30dp"
        android:layout_marginTop="234dp"
        android:layout_toLeftOf="@id/login_pwd"
        android:src="@mipmap/login_icon_lock_n_hdpi" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-25dp"
        android:layout_marginTop="245dp"
        android:layout_toRightOf="@id/login_pwd"
        android:src="@mipmap/login_icon_eye_n_hdhpi" />

    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="179dp"
        android:background="#fff" />

    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="273dp"
        android:background="#fff" />

    <EditText
        android:id="@+id/login_phone"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@null"
        android:hint="手机号"
        android:paddingLeft="50dp"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/login_pwd"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:background="@null"
        android:hint="密码"
        android:paddingLeft="50dp"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="300dp">

        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/select_box"
            android:text="记住密码"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/register_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="快速注册"
            android:textColor="#fff"
            android:textSize="15dp" />

    </RelativeLayout>


    <Button
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/login_bt_bj"
        android:text="登录"
        android:textColor="#ff0000"
        android:textSize="20dp" />


</RelativeLayout>